<div id="information">
	<dl>
		<dt class="info-title">Instructions</dt>
		<dd class="info-description">Click a spectrum band for more information.</dd>
		<dd class="info-agencies"></dd>
	</dl>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
   	 <th>Name</th>
    	<th>Description</th>
			<th>Agencies</th>
	  </tr>
	</thead>
	<tbody>
		<% @issues.each do |issue| %>
			<tr class="range" data-id="<%= issue.id %>" data-name="<%= issue.name %>" data-description="<%= issue.description %>" data-agencies="<%= issue_agencies_path(issue.id, format: :json) %>">
  	  <td><%= issue.name %></td>
    	<td><%= issue.description %></td>
			<td class="agencies"><% issue.agencies.each do |agency| %><%= agency.name %><% end %></td>
	  </tr>
	</tbody>
	<% end %>
</table>
</div>

<% @spectrum_ranges.each do |spectrum_range| %>
	<%= render spectrum_range %>
<% end %>

<br />

<%= link_to 'New Spectrum range', new_spectrum_range_path %>
