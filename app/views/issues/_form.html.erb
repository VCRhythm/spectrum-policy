<%= form_for @issue, html: {class: "form-horizontal"} do |f| %>
  <% if @issue.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
      <% @issue.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Name of Related Proceeding" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
	<div class="field">
		<%= label_tag :range_name, "Name of Affected Band" %>
		<%= text_field_tag :range_name %>
	</div>
	<div class="field">
		<%= f.label :color, "Color for the Spectrum Band" %>
		<%= f.text_field :color %>
	</div>	
	<div class="field">
		<%= label_tag :spectrum_range, "Spectrum Band:" %>
		<span class="input-append">
			<%= text_field_tag :range_low, nil, id: "spectrum-low" %><span class="add-on">MHz</span>
		</span>	
		- 
		<span class="input-append">
			<%= text_field_tag :range_high, nil, id: "spectrum-high" %><span class="add-on">MHz</span>
		</span>
		<div id="spectrum-range"></div>
	</div>
	<div class="actions">
   <%= submit_tag "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
