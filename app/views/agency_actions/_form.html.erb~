<%= form_for [@issue, @agency_action] do |f| %>
  <% if @agency_action.errors.any? %>
    <div id="error_explanation>
      <h2><%= pluralize(@agency_action.errors.count, "error") %> prohibited this agency action from being saved:</h2>
      <ul>
      <% @agency_action.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

	<div class="field">
		<%= label_tag :agency_id %>
		<%= f.text_field :agency_id %>
	</div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
	<div class="field">
		<%= f.label :action_date %>
		<%= f.text_field :action_date %>
	</div>
	<div class="field">
		<%= f.label :link %>
		<%= f.text_field :link %>
	</div>
	<%= hidden_field_tag :issue_id %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
